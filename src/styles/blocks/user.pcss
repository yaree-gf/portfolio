.user {
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  
.user__avatar {
  margin-bottom: 20px;
  margin-left: 90px;
}

.avatar {
    width: 200px;
    height: 200px;
    overflow: hidden;
    border-radius: 50%;
}

.avatar__image {
    width: 100%;
    height: 100%;
    object-fit: cover;

}