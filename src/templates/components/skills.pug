script(type="text/x-template")#skills-list
    .values__content-container
        ul.skills-graphic
            li.skills-graphic__item(v-for="skillsElem in skills")
                skills-row(
                    :skillsElem="skillsElem"
                )
              

script(type="text/x-template")#skills-row
    .skills-row
        .skills-row__title  {{skillsElem.skillsGroup}}
        .skills-row__content
            ul.skills
                li.skills__item(v-for="(skillPercent, skillName) in skillsElem.skills")
                    skills-elem(
                        :skillName="skillName"
                        :skillPercent="skillPercent"
                    )
                        
script(type="text/x-template")#skills-elem
    .skill
        svg.skill__circle-shape(viewBox="0 0 100 100" preserveAspectRatio="none")
            circle(cx="50" cy="50" r="40").skill__circle.skill__circle_under 
            circle(cx="50" cy="50" r="40" ref="color-circle" stroke="url('#gradient')" transform='rotate(180 50 50)').skill__circle.skill__circle_above
            linearGradient(id="gradient" x1="0%" y1="0%" x2="100%" y2="0%")
                stop(offset="0%" stop-color="#5500f2")
                stop(offset="100%" stop-color="#ad00ed")
        .skill__title {{skillName}}